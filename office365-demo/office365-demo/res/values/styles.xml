<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

	<style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
	    <!--
	    	Setting values in the default namespace affects API levels 7-13.

            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
	    <item name="actionBarStyle">@style/Widget.Styled.ActionBar.Inbox</item>
	</style>

	<style name="InboxTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
	    <item name="actionBarStyle">@style/Widget.Styled.ActionBar.Inbox</item>
	</style>

	<style name="ToDoTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
	    <item name="actionBarStyle">@style/Widget.Styled.ActionBar.ToDo</item>
	</style>

	<style name="DoneTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
	    <item name="actionBarStyle">@style/Widget.Styled.ActionBar.Done</item>
	</style>

	<style name="Widget.Styled.ActionBar.ToDo" parent="@style/Widget.AppCompat.ActionBar">
	    <!-- Setting values in the default namespace affects API levels 7-13 -->
	    <item name="background">@drawable/todo_actionbar_background</item>
	    <item name="backgroundStacked">@drawable/todo_actionbar_background</item>
	    <item name="backgroundSplit">@drawable/todo_actionbar_background</item>
	    <item name="titleTextStyle">@style/TitleTextStyle</item>
	</style>

	<style name="Widget.Styled.ActionBar.Done" parent="@style/Widget.AppCompat.ActionBar">
	    <!-- Setting values in the default namespace affects API levels 7-13 -->
	    <item name="background">@drawable/done_actionbar_background</item>
	    <item name="backgroundStacked">@drawable/done_actionbar_background</item>
	    <item name="backgroundSplit">@drawable/done_actionbar_background</item>
	    <item name="titleTextStyle">@style/TitleTextStyle</item>
	</style>

	<style name="Widget.Styled.ActionBar.Inbox" parent="@style/Widget.AppCompat.ActionBar">
	    <!-- Setting values in the default namespace affects API levels 7-13 -->
	    <item name="background">@drawable/inbox_actionbar_background</item>
	    <item name="backgroundStacked">@drawable/inbox_actionbar_background</item>
	    <item name="backgroundSplit">@drawable/inbox_actionbar_background</item>
	    <item name="titleTextStyle">@style/TitleTextStyle</item>
	</style>

    <style name="TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
